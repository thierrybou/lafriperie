{% extends "base.html.twig" %}

{% block content %}
    <div class="uk-container uk-container-small">

        {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit uk-form-horizontal' } }) }}
        <div class="uk-margin">
            {{ form_label(form.username, null, {'label_attr': {'class': 'uk-form-label'}}) }}
            <div class="uk-form-controls">
                {{ form_widget(form.username, {'attr': {'class': 'uk-input uk-form-width-medium'}}) }}
            </div>
        </div>
        <div class="uk-margin">
            {{ form_label(form.firstname, null, {'label_attr': {'class': 'uk-form-label'}}) }}
            <div class="uk-form-controls">
                {{ form_widget(form.firstname, {'attr': {'class': 'uk-input uk-form-width-medium'}}) }}
            </div>
        </div>
        <div class="uk-margin">
            {{ form_label(form.lastname, null, {'label_attr': {'class': 'uk-form-label'}}) }}
            <div class="uk-form-controls">
                {{ form_widget(form.lastname, {'attr': {'class': 'uk-input uk-form-width-medium'}}) }}
            </div>
        </div>
        <div class="uk-margin">
            {{ form_label(form.email, null, {'label_attr': {'class': 'uk-form-label'}}) }}
            <div class="uk-form-controls">
                {{ form_widget(form.email, {'attr': {'class': 'uk-input uk-form-width-medium'}}) }}
            </div>
        </div>
        <div class="uk-margin">
            {{ form_label(form.current_password, null, {'label_attr': {'class': 'uk-form-label'}}) }}
            <div class="uk-form-controls">
                {{ form_widget(form.current_password, {'attr': {'class': 'uk-input uk-form-width-medium'}}) }}
            </div>
        </div>
        <div class="uk-margin">
            <div uk-form-custom>
                {{ form_widget(form.imageFile, {'attr': {'class': 'task_field'}}) }}
                <button class="uk-button uk-button-default" type="button" tabindex="-1">Upload a photo</button>
            </div>
        </div>
        <div class="uk-margin">
            <input class="uk-button uk-button-default" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
        </div>
        {{ form_end(form) }}

    </div>
{% endblock %}