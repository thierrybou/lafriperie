{% extends "base.html.twig" %}

{% block content %}
    <div class="uk-container uk-container-small">
        <h1 class="uk-heading-divider uk-text-muted">Mes paramètres</h1>
        <div class="uk-card uk-card-default uk-card-small uk-grid-collapse uk-child-width-1-2@s uk-margin" uk-grid>
            <div class="uk-card-media-left uk-cover-container">
                {% if user.imageName is empty %}
                    <img src="{{ asset('uploads/images/users/default/default.jpeg') }}" alt="{{ 'default_image' }}" width="287" height="287">
                {% else %}
                <img src="{{ vich_uploader_asset(user, 'imageFile') | imagine_filter('user_thumb') }}" alt="{{ user.imageName }}">
                {% endif %}
            </div>
            <div>
                <div class="uk-card-header">
                    <h3 class="uk-card-title uk-text-left uk-text-bold">{{ app.user.username | capitalize}}</h3>
                </div>
                <div class="uk-card-body">
                    <h3 class="uk-card-title uk-text-muted">Informations personnelles</h3>
                    <ul class="uk-list">
                        <li>Nom : {{ app.user.lastname | capitalize }}</li>
                        <li>Prénom : {{ app.user.firstname | capitalize }}</li>
                        <li>Email : {{ app.user.email }}</li>
                        <li>Articles vendus : 0</li>
                        <li>Articles achetés : 0</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


